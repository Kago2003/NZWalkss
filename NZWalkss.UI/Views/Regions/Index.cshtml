@model IEnumerable<NZWalkss.UI.Models.DTO.RegionsDto>


@{
}
<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">
        Add Region
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var walks in Model)
        {
            <tr>
                <td>@walks.Id</td>
                <td>@walks.Name</td>
                <td>@walks.Code</td>
                <td> 
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walks.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>